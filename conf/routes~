# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET		/						controllers.mainCont.index
GET 	/main					controllers.Assets.at(path="/public/views", file="main.html")
GET		/login/:username/:pass	controllers.mainCont.login(username: String, pass: String)
GET		/logout					controllers.mainCont.logout
GET		/news/add/:message		controllers.mainCont.addNews(message: String)
GET		/news/delete/:id		controllers.mainCont.deleteANew(id: Integer)
GET		/news					controllers.mainCont.getAllNews
GET		/users					controllers.mainCont.getAllUsers
GET		/session				controllers.mainCont.getSession
GET		/perm/:id/:perm			controllers.mainCont.setPerm(id: Integer, perm: Integer)
#POST	/register				controllers.mainCont.register
GET		/register/:name/:lastname/:email/:user/:pass/:passconf	controllers.mainCont.register(name: String, lastname: String, email: String, user: String, pass: String, passconf: String)
GET		/profile/update/:name/:lastname/:email/:pass/:passconf  controllers.mainCont.updateProfile(name: String, lastname: String, email: String, pass: String, passconf: String)
GET		/pics					controllers.mainCont.getAllPics
GET		/comments/get/:id		controllers.mainCont.getComments(id: Integer)
POST    /upload                 controllers.mainCont.upload
GET		/comments/add/:id/:comment	controllers.mainCont.addComment(id: Integer, comment: String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)